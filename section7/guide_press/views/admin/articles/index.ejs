<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>
<div class="container">
    <hr>
    <h2>Articlews</h2>
    <a class="btn btn-success" href="/admin/articles/new">New article</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(article => { %>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td><%= article.category.title %></td>
                <td>Edit | Delete</td>
            <% }) %>

        </tbody>
    </table>
</div>
<%- include("../../partials/footer.ejs") %>
<script>
    function confirmDelete(event, form) {
        event.preventDefault();
        let result = confirm("Do you want to delete this category?");
        if(result) {
            alert("The category will be deleted!");
            form.submit();
        } else {
            alert("The category will not be deleted!");
        }
    }
</script>